@model IEnumerable<WaterLevel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Water Level List</h2>
       </div>
        <div class="col-6 text-end">
            <a asp-controller="WaterLevels" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Water Level
            </a>
       </div>
    </div>
</div>
<hr />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                DateTime
            </th>
            <th>
                HeightWater(cm)
            </th>
            <th>
                Function
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var waterLevel in Model)
        {
            <tr>
                <td>
                    @waterLevel.MeasurementDate
                </td>
                <td>
                    @waterLevel.HeightWater
                </td>
                <td style="display:flex; justify-content:center">
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="WaterLevels" asp-action="Edit" asp-route-id="@waterLevel.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                  <div class="w-50 btn-group" role="group">
                        <a asp-controller="WaterLevels" asp-action="Delete" asp-route-id="@waterLevel.Id" class="btn btn-danger mx-2"><i class="bi bi-pencil-square"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>